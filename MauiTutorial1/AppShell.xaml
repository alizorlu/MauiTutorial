<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiTutorial1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiTutorial1.View"
    Shell.FlyoutBehavior="Disabled">

    <TabBar x:Name="AppTabBar">
        <Tab Title="Students" Icon="student_icon.png">
            <ShellContent 
                ContentTemplate="{DataTemplate local:StudentPage}"
                Route="StudentPage"
                />
        </Tab>
        <Tab Title="Classroom" Icon="classroom_icon.png">
            <ShellContent 
                ContentTemplate="{DataTemplate local:ClassroomPage}"
                Route="ClassroomPage"
                />
        </Tab>
    </TabBar>
   

</Shell>
